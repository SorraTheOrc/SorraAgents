{
    "$schema": "https://opencode.ai/config.json",
    "provider": {
        "llama-local": { 
            "name": "Local Models (LLama)",
            "npm": "@ai-sdk/openai-compatible",
            "options": {
                "baseURL": "http://192.168.88.5:8080/v1"
            },
            "models": {
                "Qwen2.5-Coder-32B-Instruct-GGUF": {
                    "name": "Qwen 2.5 32B (local)"
                }
            }
        },
        "foundry-local": { 
            "name": "Local Models (Foundry)",
            "npm": "@ai-sdk/openai-compatible",
            "options": {
                "baseURL": "http://192.168.176.1:8002/v1"
            },
            "models": {
                "qwen2.5-7b-instruct-qnn-npu:2": {
                    "name": "Qwen 2.5 7b (local npu)"
                }
            } 
        }
    },

    "model": "github-copilot/gpt-5-mini",
    //"model": "foundry-local/qwen2.5-7b-instruct-qnn-npu:2"
    "small_model": "github-copilot/gpt-5-mini",
    "default_agent": "build",
    
    "tui": {
        "scroll_speed": 3,
        "scroll_acceleration": {
            "enabled": true
        }
    },

    "agent": {
        "build": {
            "permission": {
                "bash": {
                "rm -rf /": "ask",
                "rm -rf /*": "ask",
                "rm -rf .*": "ask",
                "dd if=* of=/dev/sd*": "ask",
                "mkfs* /dev/*": "ask",
                "fdisk /dev/*": "ask",
                "parted /dev/*": "ask",
                "mount *": "ask",
                "umount *": "ask",
                "chown -R /": "ask",
                "chmod -R 777 /": "ask",
                "iptables -F": "ask",
                "ufw disable": "ask",
                "systemctl stop *": "ask",
                "systemctl disable *": "ask",
                "shutdown *": "ask",
                "reboot": "ask",
                "docker system prune -a": "ask",
                "kubectl delete namespace *": "ask",
                "git push --force": "ask",
                "git push -f": "ask",
                "git reset --hard": "ask",
                "*": "allow"
                }
            }
        }
    },
    "autoupdate": true
}